<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7CCC8"
    tools:context="com.example.codebox.basemaster.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <HorizontalScrollView
            android:id="@+id/uscr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/upperDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColorHint="#a9a8a8"
                    android:scrollHorizontally="true"
                    android:gravity="left"
                    android:textSize="55sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColorHint="#a9a8a8"
                    android:layout_marginBottom="20dp"
                    android:scrollHorizontally="true"
                    android:gravity="right"
                    android:textSize="60sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/ip"
                android:background="#795548"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:entries="@array/options"/>
            <ImageView
                android:padding="5dp"
                android:background="#795548"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/left"/>

            <TextView
                android:background="#795548"
                android:layout_width="45dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:padding="5dp"
                android:background="#795548"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/right"/>
            <Spinner
                android:id="@+id/op"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#795548"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:entries="@array/options"/>
        </LinearLayout>
        <LinearLayout
            android:background="#8D6E63"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                style="@style/lowApiButton"
                android:id="@+id/and"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="AND" />
            <Button
                style="@style/lowApiButton"
                android:id="@+id/or"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="OR" />
            <Button
                style="@style/lowApiButton"
                android:id="@+id/not"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="NOT" />
            <Button
                style="@style/lowApiButton"
                android:id="@+id/xor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="XOR" />
            <ImageView
                style="@style/lowApiButton"
                android:id="@+id/del"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="13dp"
                android:layout_height="match_parent"
                android:src="@drawable/backspace" />
        </LinearLayout>

        <LinearLayout
            android:background="#A1887F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">
            <Button
                style="@style/lowApiButton"
                android:textSize="18sp"
                android:id="@+id/c"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="C" />
            <Button
                style="@style/lowApiButton"
                android:textSize="18sp"
                android:id="@+id/d"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="D"/>
            <Button
                style="@style/lowApiButton"
                android:id="@+id/e"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="E"/>
            <Button
                style="@style/lowApiButton"
                android:id="@+id/f"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="F"/>
        </LinearLayout>

        <LinearLayout
            android:background="#A1887F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">
            <Button
                style="@style/lowApiButton"
                android:id="@+id/eight"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="8"/>
            <Button
                style="@style/lowApiButton"
                android:id="@+id/nine"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="9"/>
            <Button
                android:id="@+id/a"
                style="@style/lowApiButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="A"/>
            <Button
                style="@style/lowApiButton"
                android:id="@+id/b"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="B"/>
        </LinearLayout>

        <LinearLayout
            android:background="#A1887F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">
            <Button
                style="@style/lowApiButton"
                android:textSize="18sp"
                android:id="@+id/four"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="4"/>

            <Button
                style="@style/lowApiButton"
                android:id="@+id/five"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:text="5"/>
            <Button
                style="@style/lowApiButton"
                android:textSize="18sp"
                android:id="@+id/six"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="6"/>
            <Button
                style="@style/lowApiButton"
                android:textSize="18sp"
                android:id="@+id/seven"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="7"/>
        </LinearLayout>

        <LinearLayout
            android:background="#A1887F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">
            <Button
                style="@style/lowApiButton"
                android:textSize="18sp"
                android:id="@+id/zero"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"/>
            <Button
                style="@style/lowApiButton"
                android:id="@+id/one"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1"/>
            <Button
                style="@style/lowApiButton"
                android:textSize="18sp"
                android:id="@+id/two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2"/>
            <Button
                style="@style/lowApiButton"
                android:textSize="18sp"
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="3"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
